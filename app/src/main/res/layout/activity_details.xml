<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/light_green"
        android:padding="15dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="24dp"
            android:scaleType="centerCrop"
            android:background="@drawable/pill"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="12"
            android:layout_height="wrap_content"
            android:text="@string/bads"
            android:paddingLeft="12dp"/>
        <ImageView
            android:id="@+id/menu"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/menu"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Комплекс"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_button"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Омега-3"
            android:padding="5dp"
            android:textSize="20sp"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="способствует очищению стенок сосудов от холестерина" />
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="25dp"
            android:layout_height="wrap_content"
            android:text="Вернуться к программам"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:letterSpacing="0"
            android:padding="5dp"
            android:background="@drawable/rounded_button"
            android:onClick="openBads"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/programs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="25dp"
            android:layout_height="wrap_content"
            android:text="Выбрать программу"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:letterSpacing="0"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/orange_button"
            android:onClick="openPrograms"/>
    </LinearLayout>
</LinearLayout>